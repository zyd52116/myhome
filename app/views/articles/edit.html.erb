<div class="row">
<div class= "col-md-8 col-md-offset-2">
<%= form_for @article , url: article_path(@article) do |f| %>
	
	<%= f.label :title, "文章标题" ,class: "control-label"%>
	
	<%= f.text_field :title , class: "form-control" %>
	
	<%= f.label :content, "文章内容" ,class: "control-label"%>
	
	<%= f.text_area :content ,class: "form-control",rows:"13"%>
	
	</br>
	<%= f.submit "更 新",class: "btn-primary btn btn-default"%>
	</div>
<% end %>
</div>
