<div class="row">
<div class="col-md-10"></div>
<div class="col-md-2">
	<% if signed_in? %>
	<%= link_to "新建文章", new_article_path ,class: "btn btn-primary " %>
	<% end %>
	</div>
</div>
<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8 ">
<% @articles.each do |article| %>

<h4><%= link_to article.title , article_path(article) %></h4>
<h5><%= article.content.to_s[0,120]+"..."%></h5>
<p class="page-header">发表于 <%= time_ago_in_words(article.created_at) %> ago.</p>

<% end %>
</div>

</div>
